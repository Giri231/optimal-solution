#include<iostream>
using namespace std;

class base{
    public:
    virtual void print()
    {
        cout<<"print base class";
    }
    void show()
    {
        cout<<"show base class";
    }
};
class derived :public base{
    public:
    void print()
    {
        cout<<"print derived class\n";
    }
    void show()
    {
        cout<<"show  derived class";
    }
};
int main()
{
    base *myobj;
    derived d;
    myobj =&d;
    
    myobj->print();
    myobj->show();
    
    return 0;
}
   
